<h1>User List</h1>
<table id="tbl_list"cellpadding="0" cellspacing="0" width="80%">
<tr><th>First Name</th><th>Last Name</th><th>Login</th><th>Email</th><th></th><th></th></tr>
<% for user in @users %>
<tr class="<%= cycle('even', 'odd')%>">
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.login %></td>
  <td><%= user.email %></td>
  <td><% if user.active %>Active<% else %>Banned<%end %></td>
  <td><%= link_to 'Edit',edit_user_path(user.id)%>
</tr>
<% end %>
<tr>
</table>

