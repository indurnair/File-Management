<div id="userfile_form">
<%= form_for UserFile.new, :remote => true, :html => { :multipart => true }  do |form| %>
<div class="field">

<table class="tbl_field">
   <tr>
    <td>File</td>
    <td>
      <div id="file_field"><%= form.file_field :attachment %></div>
      <div id="pbar" style="display:none;" ></div>
      <div id="user_file"></div>
    </td>
  </tr>
  <tr>
    <td>Title</td><td><%= form.text_field :title %></td>
  </tr>
  <tr>
    <td>Description</td><td><%= form.text_field :description %></td>
  </tr>
  <tr>
    <td>Publish</td><td><%= form.check_box :published %></td>
  </tr>
</table>

</div>
<div class="actions"  >
<%= form.submit 'Upload' %>
</div>
<% end %>
</div>

