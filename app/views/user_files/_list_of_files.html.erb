<% unless @user_files.blank? %>
<h1>List of Files</h1>
<table cellpadding="0" cellspacing="0" width="80%">
<tr class="table_heading"><td>Title</td><td>Description</td><td>Created Date</td><td></td><td></td><td></td><td></td></tr>

<% for attachment in @user_files %>
<tr class="<%= cycle('even', 'odd')%>">
<td style="text-align:left;"><%= attachment.title[0..25] %></td>
<td><%= attachment.description[0..25] %></td>
<td><%= attachment.created_at.strftime("%m/%d/%y") %></td>
<td title = "Show"><%= link_to image_tag('/images/open.png'),user_file_path(attachment) %></td>
<td title = "Download"><%= link_to image_tag('/images/download.png'),:controller=>'user_files',:action=>'download',:id=>attachment.id %></td>
<td title = "Create new version"><%= link_to image_tag('/images/new.png'), "#" %></td>
<td title = <%= "(" + attachment.user.login + ")" + attachment.user.first_name + " " + attachment.user.last_name  %>><%= link_to attachment.user.login, "#" %></td>
</tr>
<% end %>
</table>
<% else %>
<h3>Records not found</h3>
<% end %>

