<h2>Edit <%= resource_name.to_s.humanize %></h2>
<table>
<%= form_for(resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<p></p>
  <p></p>
 <tr><td><%= f.label 'First Name' %>:</td><td><%= f.text_field :first_name %></td></tr>
 <tr><td><%= f.label 'Last Name' %>:</td><td><%= f.text_field :last_name %></td></tr>
  <tr><td><%= f.label 'Login' %>:</td><td><%= f.text_field :login %></td></tr>
  <tr><td><%= f.label :current_password %><br /> <i>(we need your current password to confirm your changes)</i></td><td><%= f.password_field :current_password %></td></tr>

  <tr><td><%= f.label 'Email' %>:</td><td><%= f.text_field :email %></td></tr>
  <tr><td><%= f.label 'State' %>:</td><td><%= f.select :state_id,State.find(:all).map {|state| [state.name,state.id]}, {:include_blank => 'Select ...'}
 %></td></tr>
 <tr><td><%= f.label 'Country' %>:</td><td><%= f.select :country_id,Country.find(:all).map {|country| [country.name,country.id]}, {:include_blank => 'Select ...'}
 %></td></tr>

  <tr><td colspan="2"><%= f.submit "Update" %></td></tr>
<% end %>
</table>
